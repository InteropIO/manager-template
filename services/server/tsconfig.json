{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "useUnknownInCatchVariables": false,
        "outDir": "./build"
    },
    "include": [
        "src/index.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}